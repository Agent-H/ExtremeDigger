<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mineralDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="200dp"
    tools:context=".GameActivity" >
    
    <ListView
        android:id="@+id/cargoList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cargoList"
        android:layout_alignParentLeft="true"
        android:text="Total :"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cargoList"
        android:layout_alignParentRight="true"
        android:text="0$"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/sellAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalPrice"
        android:layout_centerInParent="true"
        android:text="@string/sellAll"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
</RelativeLayout>